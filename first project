      overflow-x: hidden;
    }

    .chibi-bg {
      position: fixed;
      width: 100%;
      height: 100%;
      z-index: -1;
      pointer-events: none;
    }

    .chibi-ears {
      position: absolute;
      top: 30px;
      left: 50%;
      transform: translateX(-50%);
      width: 300px;
      height: 150px;
      border-radius: 50% 50% 0 0;
      background-color: #ffcce6;
    }

    .chibi-face {
      position: absolute;
      top: 100px;
      left: 50%;
      transform: translateX(-50%);
      width: 200px;
      height: 220px;
      border-radius: 50%;
      background-color: #fff6f6;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    .chibi-eyes {
      position: absolute;
      top: 140px;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      gap: 40px;
    }

    .eye {
      width: 30px;
      height: 40px;
      border-radius: 50%;
      background-color: #5d5dff;
      position: relative;
    }

    .pupil {
      position: absolute;
